@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Catalog>;

<h1>Catalogs</h1>

@if (@Model.Count == 0)
{
  <h3>No catalogs here!</h3>
} 

@foreach (Catalog catalog in Model)
{
  <li>@Html.ActionLink($"{catalog.Name}", "Details", new { id = catalog.CatalogId })</li>
}

<p>@Html.ActionLink("Add new catalog", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>