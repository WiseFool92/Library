@{
  Layout = "_Layout";
}

@using Library.Models;
@using System.Security.Claims
@model IEnumerable<Library.Models.Item>

<h1>Patrons for @User.Identity.Name</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Patron patron in Model)
    {
      <li>@Html.ActionLink($"{patron.Description}", "Details", new { id = patron.PatronId })</li>
    }
  </ul>
} 
else
{
  <h3>No patrons have been added yet!</h3>
}

<p>@Html.ActionLink("Add new patron", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>